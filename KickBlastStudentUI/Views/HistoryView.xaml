<UserControl x:Class="KickBlastStudentUI.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <ComboBox x:Name="AthleteFilterComboBox" Width="220" Margin="0,0,8,0"/>
            <ComboBox x:Name="MonthComboBox" Width="130" Margin="0,0,8,0"/>
            <ComboBox x:Name="YearComboBox" Width="120" Margin="0,0,8,0"/>
            <Button Content="Apply" Width="90" Click="Apply_Click"/>
        </StackPanel>

        <DataGrid x:Name="HistoryGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="HistoryGrid_SelectionChanged"
                  BorderBrush="#D1D5DB" BorderThickness="1" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="150"/>
                <DataGridTextColumn Header="Athlete" Binding="{Binding AthleteName}" Width="*"/>
                <DataGridTextColumn Header="Competitions" Binding="{Binding Competitions}" Width="120"/>
                <DataGridTextColumn Header="Total (LKR)" Binding="{Binding TotalCost}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,12,0,0">
            <TextBlock x:Name="DetailsText" Text="Select a row to see details." TextWrapping="Wrap" FontFamily="Consolas"/>
        </Border>
    </Grid>
</UserControl>
