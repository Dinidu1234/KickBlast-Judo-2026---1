<UserControl x:Class="KickBlastStudentUI.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Inputs" FontSize="16" FontWeight="Bold" Margin="0,0,0,14"/>
                <TextBlock Text="Athlete"/>
                <ComboBox x:Name="AthleteComboBox" Margin="0,4,0,10" DisplayMemberPath="Name"/>
                <TextBlock Text="Competitions this month"/>
                <TextBox x:Name="CompetitionsTextBox" Margin="0,4,0,10" Text="0"/>
                <TextBlock Text="Coaching hours/week (0..5)"/>
                <TextBox x:Name="CoachingHoursTextBox" Margin="0,4,0,14" Text="0"/>
                <WrapPanel>
                    <Button Content="Calculate" Width="110" Margin="0,0,8,0" Style="{StaticResource PrimaryButtonStyle}" Click="Calculate_Click"/>
                    <Button Content="Save" Width="90" Click="Save_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Results" FontSize="16" FontWeight="Bold" Margin="0,0,0,14"/>
                <TextBlock x:Name="ResultText" FontFamily="Consolas" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
