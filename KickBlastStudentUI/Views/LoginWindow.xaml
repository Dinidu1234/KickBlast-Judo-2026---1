<Window x:Class="KickBlastStudentUI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KickBlast Judo â€“ Login" Height="420" Width="460" WindowStartupLocation="CenterScreen" Background="#F5F7FB" ResizeMode="NoResize">
    <Grid>
        <Border Style="{StaticResource CardStyle}" Width="340" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="24">
            <StackPanel>
                <TextBlock Text="KickBlast Judo" FontSize="24" FontWeight="Bold" Foreground="#2563EB" HorizontalAlignment="Center"/>
                <TextBlock Text="Login" FontSize="18" Margin="0,6,0,22" HorizontalAlignment="Center"/>
                <TextBlock Text="Username"/>
                <TextBox x:Name="UsernameTextBox" Margin="0,6,0,12" Height="34"/>
                <TextBlock Text="Password"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,6,0,10" Height="34"/>
                <TextBlock x:Name="ErrorText" Foreground="#DC2626" Margin="0,0,0,10" Visibility="Collapsed" Text="Invalid username or password."/>
                <Button Content="Login" Height="36" Style="{StaticResource PrimaryButtonStyle}" Click="Login_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
