<UserControl x:Class="KickBlastStudentUI.Views.AthletesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Athlete Form" FontSize="16" FontWeight="Bold" Margin="0,0,0,14"/>
                <TextBlock Text="Name"/>
                <TextBox x:Name="NameTextBox" Margin="0,4,0,10"/>
                <TextBlock Text="Plan"/>
                <ComboBox x:Name="PlanComboBox" Margin="0,4,0,10">
                    <ComboBoxItem Content="Beginner"/>
                    <ComboBoxItem Content="Intermediate"/>
                    <ComboBoxItem Content="Elite"/>
                </ComboBox>
                <TextBlock Text="Current Weight"/>
                <TextBox x:Name="CurrentWeightTextBox" Margin="0,4,0,10"/>
                <TextBlock Text="Category Weight"/>
                <TextBox x:Name="CategoryWeightTextBox" Margin="0,4,0,14"/>

                <WrapPanel>
                    <Button Content="Save" Width="88" Margin="0,0,8,0" Style="{StaticResource PrimaryButtonStyle}" Click="Save_Click"/>
                    <Button Content="Delete" Width="88" Margin="0,0,8,0" Click="Delete_Click"/>
                    <Button Content="Clear" Width="88" Click="Clear_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBox x:Name="SearchTextBox" Width="230" Margin="0,0,10,0"/>
                    <ComboBox x:Name="SearchPlanComboBox" Width="160" Margin="0,0,10,0">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Beginner"/>
                        <ComboBoxItem Content="Intermediate"/>
                        <ComboBoxItem Content="Elite"/>
                    </ComboBox>
                    <Button Content="Search" Width="90" Click="Search_Click"/>
                </StackPanel>

                <DataGrid x:Name="AthletesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="AthletesGrid_SelectionChanged"
                          BorderBrush="#D1D5DB" BorderThickness="1" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Plan" Binding="{Binding Plan}" Width="130"/>
                        <DataGridTextColumn Header="Current" Binding="{Binding CurrentWeight}" Width="90"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding CategoryWeight}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
