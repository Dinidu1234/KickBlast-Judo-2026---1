<Window x:Class="KickBlastStudentUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KickBlast Judo" Height="720" Width="1200" WindowStartupLocation="CenterScreen" Background="#F5F7FB">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="34"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0" Padding="20">
            <StackPanel>
                <TextBlock Text="KickBlast Judo" Foreground="#2563EB" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>
                <Button x:Name="DashboardButton" Content="Dashboard" Style="{StaticResource SidebarButtonStyle}" Click="DashboardButton_Click"/>
                <Button x:Name="AthletesButton" Content="Athletes" Style="{StaticResource SidebarButtonStyle}" Click="AthletesButton_Click"/>
                <Button x:Name="CalculatorButton" Content="Calculator" Style="{StaticResource SidebarButtonStyle}" Click="CalculatorButton_Click"/>
                <Button x:Name="HistoryButton" Content="History" Style="{StaticResource SidebarButtonStyle}" Click="HistoryButton_Click"/>
                <Button x:Name="SettingsButton" Content="Settings" Style="{StaticResource SidebarButtonStyle}" Click="SettingsButton_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Grid.Row="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="PageTitleText" Text="Dashboard" FontSize="28" FontWeight="Bold" Margin="0,0,0,16"/>
            <ContentControl x:Name="MainContent" Grid.Row="1"/>
        </Grid>

        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#1F2937" Padding="12,6">
            <TextBlock x:Name="StatusText" Foreground="White" VerticalAlignment="Center" Text="Ready."/>
        </Border>
    </Grid>
</Window>
